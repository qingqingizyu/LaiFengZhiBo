<?xml version="1.0" encoding="utf-8"?><!--CameraView最终集成自FrameLayout-->
<com.lk.comecrazy.mylive.view.CameraView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--演示UI的创建-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="100dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/change_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_live_flash" />

            <CheckBox
                android:id="@+id/switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/switch_filter"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_live_camera" />

            <CheckBox
                android:id="@+id/switch_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_meiyan" />


            <CheckBox
                android:id="@+id/set_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_live_mic" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:button="@null"
            android:drawableTop="@drawable/selector_live_start" />
    </RelativeLayout>
</com.lk.comecrazy.mylive.view.CameraView>
